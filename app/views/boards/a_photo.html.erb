<dl>
  <dt>Image</dt>
  <dd>
    <img src="<%=@the_photo.image%>">
  </dd>

  <dt>Caption</dt>
  <dd>
    <%=@the_photo.caption%>
  </dd>

  <dt>Owner</dt>
  <dd>
    <%=@the_photo.owner%>
  </dd>

  <dt>Posted</dt>
  <dd>
    over 5 years ago
  </dd>

  <dt>Likes count</dt>
  <dd><%=@the_photo.likes_count%></dd>

  <dt>Comments count</dt>
  <dd><%=@the_photo.comment_count%></dd>

  <dt>Fans</dt>
  <dd>
    <%=@the_photo.fans%>
  </dd>

  <dt>Add a fan</dt>
  <dd>

    <form action="/insert_like" method="post">
      <input type="hidden" value="777" name="query_photo_id">
      <button>Like</button>
    </form>
  </dd>

</dl>



<h2>Comments</h2>
<table>
  <tr>
    <th>Commenter</th>
    <th>Comment</th>
    <th>Posted</th>
  </tr>

<% @the_photo.comments.each do |the_comment| %>


    <tr>
      <td>
       <%=the_comment.author%>
      </td>

      <td>
        <%=the_comment.body%>
      </td>

      <td>
        over 5 years ago
      </td>
    </tr> 



<h3>Add a new comment</h3>

<form action="/insert_comment" method="post">
  <input type="hidden" value="777" name="query_photo_id">
  
  <label for="browser_comment">Comment</label>
  <textarea id="browser_comment" name="query_body" placeholder="Enter a comment..."></textarea>

  <button>Add comment</button>
</form>
