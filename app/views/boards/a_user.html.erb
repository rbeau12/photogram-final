<%following=false%>
<%request_id=100000%>
<%@real_followers.each do |the_follower|%>
  <%if the_follower.sender_id==current_user.id%>
    <%following=true%>
    <%request_id=the_follower.id%>
  <%end%>
<%end%>

<h1><%=@the_user.username%></h1>

<dl>
  <dt>Private</dt>
  <dd><%=@the_user.private%></dd>


  <dt>Followers</dt>
  <dd>
    <%=@real_followers.count%>

  <%if following%>
      <form action="/delete_follow_request" method="post">
            <input type="hidden" name="query_recipient_id" value=<%=@the_user%>>

            <button>
              Unfollow
            </button>
        </form>
  <%else%>
      <div>
          <form action="/insert_follow_request" method="post">
            <input type="hidden" name="query_recipient_id" value=<%=@the_user%>>

            <button>
              Follow
            </button>
          </form>
    </div>
<%end%>
  </dd>

  <dt>Following</dt>
  <dd><%=@real_followings.count%></dd>
</dl>

<nav>
  <ul>
    <li>
      <a href="/users/<%=@the_user.username%>">Profile</a>
    </li>
    <li>
      <a href="/users/<%=@the_user.username%>/liked_photos">Liked photos</a>
    </li>
    <li>
      <a href="/users/<%=@the_user.username%>/feed">Feed</a>
    </li>
    <li>
      <a href="/users/<%=@the_user.username%>/discover">Discover</a>
    </li>
  </ul>
</nav>


<h2>Own photos (<%=@the_user.photos.count%>)</h2>

<table border="1">
  <tr>
    <th>
      Image
    </th>
    <th>
      Owner
    </th>
    <th>
      Caption
    </th>
    <th>
      Posted
    </th>
    <th>
      Likes
    </th>
    <th></th>
  </tr>


<%@the_user.photos.each do |the_photo|%>

  <tr>
    <td>
      <img src="<%=the_photo.image%>">
    </td>

    <td>
      <%=the_photo.owner.username%>
    </td>

    <td>
      <%=the_photo.caption%>
    </td>

    <td>
      over 5 years ago
    </td>

    <td>
      <%=the_photo.likes_count%>
    </td>

    <td>
      <a href="/photos/<%=the_photo.id%>">
        Show details
      </a>
    </td>
  </tr>

<%end%>
